# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,h}]
indent_style = tab
indent_size = 8

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{md,txt}]
trim_trailing_whitespace = false

[*.{sh,pl}]
indent_style = space
indent_size = 4

[Makefile*]
indent_style = tab

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2
